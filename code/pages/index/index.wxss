/**index.wxss**/
.container {
  width: 100%;
  height: 100%;
}

.container .emo-cont {
  width: 100%;
  height: 100%;
  overflow-y: auto;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: flex-start;
}

.container .emo-one {
  display: block;
  width: 100rpx;
  height: 100rpx;
  font-size: 60rpx;
  line-height: 100rpx;
  text-align: center;
}

.container .recently-use {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  box-shadow: 0 1px 5px #ccc;
}

.container .recently-use>view {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.container .recently-use>text {
  text-indent: 60rpx;
  font-size: 14px;
  line-height: 50px;
  display: block;
  color: #ccc;
}